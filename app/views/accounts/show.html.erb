
<h1><strong>Your Account</strong></h1>
<div class="row text-center grid3">
  <div class="col-md-4">
    <h3><strong>Account name</strong></h3>
    <p><%= @account.account_name %></p>
  </div>
 
  <div class="col-md-4">
    <h3><strong>User List</strong></h3>   
    <% @usr.each do |n| %>
      <p><%= n.name %></p>
      <p><%= check_for_owner(n.id, @account) %></p>
    <%end%>
  </div>
  <% if check_for_owner(current_user.id, @account) =="owner" %>
    <div class="col-md-4">
      <h3><strong>Add User</strong></h3>
      <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add Users</button>
  </div> 
  <%else%>
  <%end%>
  

</div> 



<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header col-md-2">
                    <h4 class="modal-title">Modal Header</h4>
      </div>
      <%= form_for :invitation, url: invitations_get_user_mail_path do |form| %>
          <div class="modal-body">
              <div class="field">
                <div class = "col-md-2" >
                    <%= form.label :email %>
                    <%= form.email_field :user_email %>
                    <%= form.hidden_field :account_id, :value => @account.id %>
                    <%= form.submit "Invite" %>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
<style>
.grid3 >div{
  height: 400px;
  background: white;
  float: none;
  display: inline-block;
  background-clip: content-box
}
</style>