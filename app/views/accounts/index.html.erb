<h2><strong>OWNER ACCOUNT</strong></h2>
	<div class = "container">
		<% @account.each do |acc| %>
		<div class="row jumbotron">
			<div class = "col-md-6" >
				<h1> Account Details </h1>
				
					<div class="col-sm-6 col-md-3">
						
					<p><%= link_to acc.account_name, account_path(acc.id) %></p>
					</div>
			</div>
			
			<!-- <div class = "col-md-6">
				<h3>Add Team</h3>
					<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add Users</button>
			</div> -->
		</div>
	</div>
	<div class="modal fade" id="myModal" role="dialog">
		    <div class="modal-dialog">
		<!-- Modal content-->
				<div class="modal-content">
					<div class="modal-header col-md-2">
						<h4 class="modal-title">Modal Header</h4>
					</div>
					<%= form_for :invitation, url: invitations_get_user_mail_path do |form| %>
						<div class="modal-body">
							<div class="field">
								<div class = "col-md-2" >
									<%= form.label :email %>
									<%= form.email_field :user_email %>
									<%= form.hidden_field :account_id, :value =>acc.id %>
									<%= form.submit "Invite" %>
									<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
								</div>
							</div>
						</div>
					<% end %>
				</div>
			</div>
			
		</div>
	<%end%>


