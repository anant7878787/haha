<div class = "container">
	<div class="row">
		<h2><strong>OWNER ACCOUNT</strong></h2>
		<div class="col-md-12">
			<div class = "col-md-4 well" >
				<h1> Account Details </h1>
				<% @account.each do |acc| %>
					<div class="col-sm-6 col-md-3">
						<%= acc.account_name %>
					</div>
				
			</div>
			<div class = "col-md-4" >
				
			</div>
			<div class = "col-md-4 well">
				<h3>Add Team</h3>
					<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add Users</button>
			</div>
		</div>
	</div>



		<div class="modal fade" id="myModal" role="dialog">
		    <div class="modal-dialog">
		<!-- Modal content-->
				<div class="modal-content">

					<div class="modal-header col-md-2">
						<h4 class="modal-title">Modal Header</h4>
					</div>
					
					<%= form_for :invitation, url: invitations_get_user_mail_path do |form| %>
					<div class="modal-body">
						<div class="field">
							
								<div class = "col-md-2" >
									<%= form.label :email %>
									<%= form.email_field :user_email %>
									        <%= form.hidden_field :account_id, :value =>acc.id %>

									<%= form.submit "Invite" %>
									
									<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
								</div>
						</div>
					</div>
					<% end %>
				</div>
			</div>
			
		</div>
	<%end%>
</div>

